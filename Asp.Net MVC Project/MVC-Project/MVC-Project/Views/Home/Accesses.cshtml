@model AccessesViewModel
@{
}
<style>
    .div-table-item-text {
        width: 40%;
    }
</style>

<div class="div-table-view" id="div-table-view">
    <p class="div-table-title">Accesses</p>
    <div class="div-table-items">
        <a class="submit-btn" asp-controller="Home" asp-action="AddAccesses">Add</a>
        @for (int i = 0; i < Model.AppAccesses.Count; i++)
        {
            <div class="div-table-item">
                <div class="div-table-item-text">
                    @Model.AppAccesses[i].Name
                </div>
                <div class="div-table-item-btn">
                    <form asp-controller="Home" asp-action="CheckAccess" method="post">
                        <input type="hidden" name="id" value="@Model.AppAccesses[i].Id" />
                        <button class="submit-btn" type="submit">Check</button>
                    </form>
                </div>
                <div class="div-table-item-btn">
                    <form asp-controller="Home" asp-action="AccessDelete" method="post">
                        <input type="hidden" name="id" value="@Model.AppAccesses[i].Id" />
                        <button class="submit-btn" type="submit">Delete</button>
                    </form>
                </div>
            </div>
        }
    </div>
</div>