@model string?
@{
}


<div class="modal-window">
    <form class="modal-form" id="form" asp-controller="Home" asp-action="Registration" method="post" onsubmit="submitClick(event)">
        <div class="modal-form-group">
            <p class="modal-form-title">
                Registration
            </p>
        </div>
        <div class="modal-form-group">
            <label class="modal-form-label">
                Image:
            </label>
            <input type="text" name="imgSrc" id="imgSrc" class="modal-form-input input" required />
        </div>
        <div class="modal-form-group">
            <label class="modal-form-label">
                Login:
            </label>
            <input type="text" name="login" class="modal-form-input input" required />
        </div>
        <div class="modal-form-group">
            <label class="modal-form-label">
                Password:
            </label>
            <input type="password" name="password" class="modal-form-input input" required />
        </div>
        <div class="modal-form-group">
            <label class="modal-form-label">
                Password again:
            </label>
            <input type="password" name="password2" class="modal-form-input input" required />
        </div>
        <div class="modal-form-group">
            <label class="modal-form-label">
                Firstname:
            </label>
            <input type="text" name="firstname" class="modal-form-input input" required />
        </div>
        <div class="modal-form-group">
            <label class="modal-form-label">
                Lastname:
            </label>
            <input type="text" name="lastname" class="modal-form-input input" required />
        </div>
        <div class="modal-form-group">
            <button type="submit" class="submit-btn">Register</button>
        </div>
        <div>
            <a class="a-link" asp-controller="Home" asp-action="Authorization">Authorization</a>
        </div>
    </form>
</div>

<script>
    function submitClick(event) {
        event.preventDefault();
        var url = document.getElementById('imgSrc').value;
        const img = new Image();
        img.onload = function () { document.querySelector("#form").submit(); }
        img.onerror = function () { alert(`unvalid src: ${url}`); }
        img.src = url;
    }
</script>