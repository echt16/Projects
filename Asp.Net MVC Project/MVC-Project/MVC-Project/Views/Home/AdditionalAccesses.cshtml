@model AdditionalAccessesViewModel
@{
}
<style>
    .div-table-item-text {
        width: 40%;
    }
</style>

<div class="div-table-view" id="div-table-view">
    <p class="div-table-title">Additional Accesses</p>
    <div class="div-table-items">
        <a class="submit-btn" asp-controller="Home" asp-action="AddAdditionalAccess">Add</a>
        @foreach(var item in Model.AppAccesses)
        {
            <p class="div-table-group-title">@item.Key.Name</p>
            @foreach (var item2 in item.Value)
            {
                <div class="div-table-item">
                    <div class="div-table-item-text">
                        @item2.Name
                    </div>
                    <div class="div-table-item-btn">
                        <form asp-controller="Home" asp-action="CheckAdditionalAccess" method="post">
                            <input type="hidden" name="id" value="@item2.Id" />
                            <button class="submit-btn" type="submit">Check</button>
                        </form>
                    </div>
                    <div class="div-table-item-btn">
                        <form asp-controller="Home" asp-action="AdditionalAccessDelete" method="post">
                            <input type="hidden" name="id" value="@item2.Id" />
                            <button class="submit-btn" type="submit">Delete</button>
                        </form>
                    </div>
                </div>
            }
        }
    </div>
</div>